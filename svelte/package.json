{
  "name": "buf-svelte",
  "version": "0.0.1",
  "scripts": {
    "start": "npm run generate && vite dev",
    "build": "vite build",
    "test": "vitest run",
    "test:e2e": "npm run playwright:install && playwright test",
    "playwright:install": "playwright install",
    "generate": "buf generate",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "ci": "npm run generate && npm run check && npm run format && npm run lint && npm run build && npm run test && npm run test:e2e"
  },
  "type": "module",
  "devDependencies": {
    "@bufbuild/buf": "^1.34.0",
    "@bufbuild/protobuf": "^2.1.0",
    "@bufbuild/protoc-gen-es": "^2.1.0",
    "@connectrpc/connect": "^2.0.0-beta.1",
    "@connectrpc/connect-web": "^2.0.0-beta.1",
    "@playwright/test": "^1.45.0",
    "@sveltejs/adapter-auto": "^3.2.2",
    "@sveltejs/kit": "^2.5.18",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/svelte": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.41.0",
    "flush-promises": "^1.0.2",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.5",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.4",
    "svelte-preprocess": "^6.0.1",
    "tslib": "^2.6.3",
    "typescript": "^5.5.2",
    "vite": "^5.3.2",
    "vitest": "^1.6.0"
  }
}
